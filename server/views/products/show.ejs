<%- include('../includes/head'); %>
<%- include('../includes/nav'); %>
<% if (product != undefined) { %>
<main>
  <div class="container">
    <div class="box box-detail">
      <h2 class="pop-heading"><%= product.city %></h2>
      <h3><%= product.region %> area</h3>
      <div class="bg-img" style="background-image: url('<%= product.image %>')">
        <div class="bg-gray">
          <img class="product-img mt-s img-center" src="<%= product.image %>" alt="<%= product.caption %>">
        </div>
      </div>
      <div class="mt-s">
        <p class="mt-s txt-r">From <span class="price">$<%- product.price.toFixed(2).replace(/\d(?=(\d{3})+\.)/g, '$&,') %></span></p>
        <p class="mt-s"><%- product.description.replace(/(?:\\[rn])+/g, "<br /><br />") %></p>
        <p class="cite mt-xs"><%= product.cite %></p>
      </div>
    </div>
  </div>
</main>

<% } else { %>
<main class="content-center">
  <div class="container">
    <div class="box">
      <div class="result-msg mt-m result-red">
        <p class="my-s txt-red">No destination found.</p>
      </div>
    </div>
  </div>
</main>
<% } %>

<%- include('../includes/footer'); %>
